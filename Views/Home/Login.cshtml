@model LoginUser;

<form asp-controller="Home" asp-action="LoginUser" method="POST" >
    <div class="form-group">
        <span asp-validation-for="LoginEmail"></span>   
        <label class="form-horizontal">Email:  </label>
        <input type="email" class="form-control" asp-for="LoginEmail"/>
    </div>
    <div class="form-group">
        <label class="form-horizontal">Password:  </label>
        <input type="password" class="form-control" asp-for="LoginPassword"/> 
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value= "Login">
    </div>   
    
</form>
